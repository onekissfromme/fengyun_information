<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fengyun.information"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fengyun.information.main.view.Act_Splash"
            android:label="FengyunInformation"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页 -->
        <activity
            android:name="com.fengyun.information.main.view.Act_Main"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- 新闻详情页 -->
        <activity
            android:name="com.fengyun.information.news.view.Act_NewsDetail"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>