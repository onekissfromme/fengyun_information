<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/view_newitem_iv_icon"
                android:layout_width="86dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/view_newitem_iv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/view_newitem_iv_icon"
                android:textColor="@color/title_black"
                android:textSize="@dimen/sn_16sp"
                android:layout_marginTop="5dp"

                android:singleLine="true"/>

            <TextView
                android:id="@+id/view_newitem_iv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/view_newitem_iv_icon"
                android:layout_below="@id/view_newitem_iv_title"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/sn_12sp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>